<section class="MenuItem">
  <% menu.each do |item| %>
    <%= form_with url: orders_path do |form| %>
      <li>
        <label class="MenuItem-container">
          <%# <%= form.check_box :item_ids, { multiple: true, id: "item-#{item.id}" }, item %>
          <input type="checkbox" name="item_ids[]" value='<%= item.id %>' class="MenuItem-checkbox"/>
          <%# <%= check_box_tag 'menu_item', '1', false, class:"MenuItem-checkbox" %>
          <p class="MenuItem-name"> <%=item.menu_item_name%> </p>
          <p class="MenuItem-price"> <%=item.menu_item_price%> </p>
          <%= form_with(url: menu_item_path(item.id), method:"delete") do%>
            <%= image_submit_tag 'trash-can.svg'%>
          <%end%>
        </label>
      </li>
    <% end %>
  <% end %>
</section>
